<%
    require "erb"

    db_type = @db_type.to_s
    db_name = @db_name.to_s
    db_host = @db_host.to_s
    db_username = @db_username.to_s
    db_password = @db_password.to_s

    if db_username.empty? && db_password.empty?
      dsn = db_type + '://' + db_host + '/' + db_name
    else
      dsn = db_type + '://' + db_username + ':' + ERB::Util.url_encode(db_password) + '@' + db_host + '/' + db_name
    end
-%>
<?php /* This file is managed by Puppet. */ ?>
<?php

